<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>2.2.6.RELEASE</version>
    </parent>

    <groupId>com.iquantex.samples</groupId>
    <artifactId>phoenix-samples</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <properties>
        <!--common set-->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <!--组件版本-->
        <revision>1.0-SNAPSHOT</revision>
        <phoenix.version>2.6.0-RC11</phoenix.version>
        <swagger2.version>2.6.1</swagger2.version>
        <lombook.version>1.16.20</lombook.version>
        <proto.version>3.4.0</proto.version>
        <kafka.version>2.4.1</kafka.version>
    </properties>

    <modules>
        <module>bank-account</module>
        <module>hello-world</module>
        <module>shopping</module>
        <module>shopping-cart</module>
    </modules>

    <repositories>
        <repository>
            <id>quantex</id>
            <name>Quantex Maven Repository</name>
            <url>https://nexus.iquantex.com/repository/releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <layout>default</layout>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!--代码格式化插件-->
            <plugin>
                <groupId>io.spring.javaformat</groupId>
                <artifactId>spring-javaformat-maven-plugin</artifactId>
                <version>0.0.15</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <inherited>true</inherited>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka_2.12</artifactId>
                <version>${kafka.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka_2.12</artifactId>
                <version>${kafka.version}</version>
                <classifier>test</classifier>
            </dependency>
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka-clients</artifactId>
                <version>${kafka.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka-clients</artifactId>
                <version>${kafka.version}</version>
                <classifier>test</classifier>
            </dependency>
            <!--phoenix-->
            <dependency>
                <groupId>com.iquantex</groupId>
                <artifactId>phoenix-core</artifactId>
                <version>${phoenix.version}</version>
            </dependency>
            <dependency>
                <groupId>com.iquantex</groupId>
                <artifactId>phoenix-server-starter_2.12</artifactId>
                <version>${phoenix.version}</version>
            </dependency>
            <dependency>
                <groupId>com.iquantex</groupId>
                <artifactId>phoenix-transaction_2.12</artifactId>
                <version>${phoenix.version}</version>
            </dependency>
            <dependency>
                <groupId>com.iquantex</groupId>
                <artifactId>phoenix-client-starter_2.12</artifactId>
                <version>${phoenix.version}</version>
            </dependency>
            <dependency>
                <groupId>com.iquantex</groupId>
                <artifactId>phoenix-event-publish-starter_2.12</artifactId>
                <version>${phoenix.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
